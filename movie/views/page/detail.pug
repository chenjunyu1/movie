extends ../layout

block content
    .container
        .row
            .col-md-7
                embed(src=movie.flash,allowFullScreen,quality='high',
                width='720',height='500',align='middle',type='application/x-shockwave-flash')
                .panel.panel-default(style="padding-bottom:30px")
                    .panel-heading
                        h3 评论区
                    .panel-body
                        each item in comments
                            .media
                                .media-left
                                    a.comment(href='#comment' data-cid=item._id data-toid=item.from._id)
                                        img(src='/img/avatar.jpg',width='64')
                                .media-body
                                    h4.media-heading #{item.from.username}
                                        p #{item.content}
                                    if item.reply && item.reply.length>0
                                        each reply in item.reply
                                            .media
                                                .media-left
                                                    a.comment(href='#comment' data-cid=item._id data-toid=reply.from._id)
                                                        img(src='/img/avatar.jpg',width='64')
                                                .media-body
                                                    h4.media-heading
                                                        | #{reply.from.username}
                                                        span.text-info &nbsp;回复&nbsp;
                                                        | #{reply.to.username}
                                                        p #{reply.content}
                        #comment
                            form#commentForm(method='post' action='/user/comment')
                                input(type='hidden',name='movieId' value=movie._id)
                                if user
                                    .form-group
                                        textarea.form-control(name='content' rows='3' style='resize:none' id='textipt')
                                    button.btn.btn-primary(type='submit') 提交
                                else
                                    a.navbar-link(href='#',data-toggle='modal',data-target='#login') 登录
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.movieName
                    dt 导演
                    dd= movie.doctor
                    dt 国家
                    dd= movie.country
                    dt 语种
                    dd= movie.language
                    dt 上映年份
                    dd= movie.year
                    dt 电影简介
                    dd= movie.summary
    script(src='/js/libs/comment.js')