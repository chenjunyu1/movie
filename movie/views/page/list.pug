extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名字
                        th 导演
                        th 国家
                        th 上映年份
                        th 查看
                        th 更新
                        th 删除电影
                tbody
                    each item in movies
                        tr(class='item-'+item._id)
                            td= item.movieName
                            td= item.doctor
                            td= item.country
                            td= item.year
                            td: a(target='_blank',href='/movie/'+item._id) 查看
                            td: a(target='_blank',href='/admin/update/'+item._id) 更新
                            td: button.btn.btn-danger.del(type='button' data-id=item._id) 删除

            a.btn.btn-success(href='/admin/movie/new') 添加
    script(src='/js/delete.js' type='text/javascript')