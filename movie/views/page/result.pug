extends ../layout

block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 #{keyWord}
                .panel-body
                    if movies && movies.length>0
                        each item in movies
                            .col-md-2
                                .thumbnail
                                    a(href='/movie/' + item._id)
                                        img(src=item.poster,alt=item.movieName)
                                    .caption
                                        h3 #{item.movieName}
                                        p: a.btn.btn-primary(href='/movie/' + item._id role='button') 观看预告片
            ul.pagination
                -for (let i = 0 ; i< totalPage;i++)
                    if curretnPage == i+1
                        li.active
                            span #{curretnPage}
                    else
                        li: a(href='/user/search?p='+i+'&'+query) #{i+1}